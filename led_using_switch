from machine import Pin
from time import sleep

led = Pin(15, Pin.OUT)
button = Pin(0, Pin.IN, Pin.PULL_UP)  # Internal pull-up

led_state = 0
led.value(led_state)

while True:
    if button.value() == 0:  
        sleep(0.1)  
        if button.value() == 0:  
            led_state = not led_state 
            led.value(led_state)  
            while button.value() == 0:
                sleep(0.1)  
